names, idd = ['Анна', 'Борис', 'Виктория', 'Григорий'], [1, 2, 3]
 
def auth(l1, l2):
    i = 0
    #когда разность длины списков станет нулевой/отрицательной (за счёт искуственного расширения второго списка пустотой), i становится больше разности и цикл заканчивается
    while i <= len(l1) - len(l2) + 1:
        l2.append(None)
        i += 1
    return dict(zip(l1, l2))
print(auth(names, idd))
